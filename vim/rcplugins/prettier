" Plug 'prettier/vim-prettier', { 'do': 'yarn install' }

nnoremap <leader>pip :call AddPragma()<cr>
nnoremap <leader>pdp :call DeletePragma()<cr>
nnoremap <leader>pf :Prettier<cr>

function! AddPragma()
  call append(line("gg"), "")
  call append(line("gg"), " */")
  call append(line("gg"), " * @format")
  call append(line("gg"), "/**")
endfunction

function! DeletePragma()
   0,4d
endfunction

" let g:prettier#autoformat = 0
" autocmd BufWritePre *.js,*.jsx,*.mjs,*.ts,*.tsx,*.css,*.less,*.scss,*.json,*.graphql,*.md,*.vue,*.yaml,*.html Prettier

autocmd BufWritePre *.md Prettier
command! -nargs=0 Prettier :CocCommand prettier.formatFile
"" vim:ft=vim
