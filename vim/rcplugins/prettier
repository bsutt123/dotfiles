Plug 'prettier/vim-prettier', {
  \ 'do': 'yarn install',
  \ 'for': ['ruby'] }

nnoremap <leader>pip :call AddPragma()<cr>
nnoremap <leader>pdp :call DeletePragma()<cr>
nnoremap <leader>pf :PrettierAsync<cr>
let g:prettier#config#config_precedence = 'file-override'

function! AddPragma()
  call append(line("gg"), "")
  call append(line("gg"), " */")
  call append(line("gg"), " * @format")
  call append(line("gg"), "/**")
endfunction

function! DeletePragma()
   0,4d
endfunction

command! -nargs=0 Prettier :CocCommand prettier.formatFile

" "" vim:ft=vim
