" ALE - Asynchronous linting engine, checks files as you work

Plug 'w0rp/ale'

let g:ale_linters = {
      \ 'javascript': ['eslint']
      \ }

let g:ale_fixers = {
\   '*': ['remove_trailing_lines', 'trim_whitespace'],
\   'javascript': ['eslint'],
\}

let g:ale_fix_on_save = 1

nmap <silent> [r <Plug>(ale_previous_wrap)
nmap <silent> ]r <Plug>(ale_next_wrap)

"" vim:ft=vim
